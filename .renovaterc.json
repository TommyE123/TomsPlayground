{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "automerge": true,
  "regexManagers": [
    {
      "fileMatch": ["(^|/|\\.)Dockerfile$", "(^|/)Dockerfile[^/]*$"],
      "matchStrings": [
        "^FROM linuxserver/docker-baseimage-alpine:([0-9]+).([0-9]+)-[a-zA-Z0-9]+-ls([0-9]+)$"
      ]
    }
  ]
}
