{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "automerge": true,
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "(?<=^FROM node:\\d+\\.\\d+\\.\\d+-alpine$\\n).*?(?=\\nWORKDIR /app$\\n)"
      ]
    }
  ]
}
