{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "automerge": true,
  "packageRules": [
    {
      "description": "custom versioning for our docker node tag format",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["myorg/myimage"],
      "versioning": "regex:^(?<language>.*)-(?<major>\\d+)?(\\.(?<minor>\\d+))?-(?<compatibility>.*)$",
      "allowedVersions": "/^node-\\d+-\\w+$/",
      "matchCurrentValue": "/^node/"
    }
  ]
}
